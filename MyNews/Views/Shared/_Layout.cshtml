    <style>
.center {
  text-align: center;
}

.pagination {
  display: inline-block;
}

.pagination a {
  color: black;
  float: left;
  padding: 8px 16px;
  text-decoration: none;
  transition: background-color .3s;
  border: 1px solid #ddd;
  margin: 0 4px;
}

.pagination a.active {
  background-color: #255ccb;
  color: white;
  border: 1px solid #255ccb;
}

.pagination a:hover:not(.active) {background-color: #ddd;}



</style>

</head>
<body>

    @{

    }

    <div id="mySidenav" class="sidenav" style="width:0px;">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a asp-action="index" class="nav-link">صفحه اصلی</a>
        <a class="nav-link NavSide SignCategory">دسته ی اول<i class="fa fa-caret-down Icon_category_moblie"></i></a>
        <div class="Nav_subset animate__animated animate__fadeInUp">
            @await Component.InvokeAsync("MenuBar")

        </div>


        <a class="nav-link NavSide SignCategory">دمو های ثبت نام<i class="fa fa-caret-down Icon_category_moblie"></i></a>
        <div class="Nav_subset animate__animated animate__fadeInUp">
            <a href="LoginMode1.html" class="nav-link NavSide">دموی ثبت نام نسخه 1</a>
            <a href="LoginMode2.html" class="nav-link NavSide">دموی ثبت نام نسخه 2</a>
        </div>

        <a class="nav-link NavSide SignCategory">دمو های تماس با ما<i class="fa fa-caret-down Icon_category_moblie"></i></a>
        <div class="Nav_subset animate__animated animate__fadeInUp">
            <a href="ContactUsMode1.html" class="nav-link NavSide">دموی تماس با ما نسخه 1</a>
            <a href="ContactUsMode2.html" class="nav-link NavSide">دموی تماس با ما نسخه 2</a>
            <a href="ContactUsMode3.html" class="nav-link NavSide">دموی تماس با ما نسخه 3</a>
        </div>
    </div>

    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-top">
                <a href="Mode1.html" class="logo"> خبرگزاری <span style="margin-right: 8px;"> اتفاق </span></a>




                <div class="header-date">@DateTime.Now.toShamsi()</div>

                <div class="header-actions responsiv_Desctop">
                    <a asp-controller="Home" asp-action="Profile">ورود | ثبت نام </a>
                    <a asp-controller="Home" asp-action="contactUs">تماس با ما</a>


                    
                </div>
 


                

            </div>


            <nav class="main-nav">
                <div class="container">
                    <div class="nav-container">
                        <button class="scroll_right btn_Dynamic" aria-label="اسکرول به راست">&#8250;</button>

                        <span class="sidebarMenoButton" style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776;</span>
                        <ul class="nav-menu nav_menud WidthDynamic">



                            <li class="nav-item has_MegaMeno">
                                <a asp-controller="Home" asp-action="index" class="nav-link">صفحه اصلی</a>
                            </li>

                            <li class="nav-item has_MegaMeno">
                                <a asp-controller="Home" asp-action="Archive" class="nav-link">آرشیو</a>
                                
                            </li>
                            <li class="nav-item has-submenu" onclick="showSubmenu(item)">
                                <a class="nav-link">دسته اول<i class="fa fa-caret-down Icon_category"></i></a>
                                <div class="submenuOrginal">
                                    <div class="placeholder"></div>
                                    <div class="DImage_Meno">
                                        @await Component.InvokeAsync("HeadNews")
                                    </div>

                                    <ul class="submenu">
                                        @await Component.InvokeAsync("MenuBar")                            
                                    </ul>
                                </div>
                            </li>




                            <li class="nav-item has_MegaMeno">
                                
                            </li>
                        </ul>
                        <button class="scroll_left btn_Dynamic" aria-label="اسکرول به چپ">&#8249;</button>
                        <div class="header-actions responsiv_Mobile">
                            <a href="Login.html">ورود</a>
                            <a href="Login.html">ثبت‌نام</a>
                            <a href="ContactUs.html">تماس با ما</a>
                        </div>
                        
                    </div>

                </div>

            </nav>
        </div>
    </header>


    @RenderBody()
 


