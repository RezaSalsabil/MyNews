@model TblNews

<article class="featured-card">
    <a asp-action="singleNews" asp-route-id="@Model.Id">
        <div class="featured-img">
            <img src="~/images/content/@Model.Image" alt="خبر ویژه">
        </div>
        <div class="featured-content">
            <span class="featured-category">@Model.Category.Name</span>
            <h3 class="featured-title">
                <a asp-action="singleNews" asp-route-id="@Model.Id">@Model.Title</a>
            </h3>
            <p class="featured-desc">@Model.Body.Shorten(20)</p>
            <div class="featured-meta">
                <span>@Model.DatePublished.toShamsi()</span>
                <span>@Model.ViewCount بازدید</span>
            </div>
        </div>
    </a>
</article>